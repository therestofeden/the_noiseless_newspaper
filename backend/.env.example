# =============================================================================
# Noiseless Newspaper Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Noiseless Newspaper"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./noiseless_newspaper.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/noiseless_newspaper

# -----------------------------------------------------------------------------
# API Keys (all optional for local development with mock data)
# -----------------------------------------------------------------------------

# Anthropic API (for AI-powered features)
ANTHROPIC_API_KEY=

# OpenAI API (alternative AI provider)
OPENAI_API_KEY=

# arXiv API (for fetching academic papers)
ARXIV_API_KEY=

# NewsAPI (for general news articles)
NEWSAPI_KEY=

# Semantic Scholar API (for citation data)
SEMANTIC_SCHOLAR_API_KEY=

# -----------------------------------------------------------------------------
# Scheduler Settings
# -----------------------------------------------------------------------------
# How often to fetch new articles (in minutes)
FETCH_INTERVAL_MINUTES=60

# How often to recalculate PageRank scores (in hours)
PAGERANK_UPDATE_INTERVAL_HOURS=6

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# -----------------------------------------------------------------------------
# CORS Settings
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# -----------------------------------------------------------------------------
# Pagination
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# Ranking Algorithm Weights
# -----------------------------------------------------------------------------
# Time decay for recency scoring (hours until score = 0.5)
RANKING_RECENCY_HALF_LIFE_HOURS=24.0

# Time decay for vote weighting (days)
RANKING_VOTE_DECAY_DAYS=7.0

# Cold-start transition parameters
RANKING_LAMBDA_MIDPOINT_VOTES=10
RANKING_LAMBDA_STEEPNESS=0.5

# Component weights (should sum to 1.0 for intuitive interpretation)
RANKING_WEIGHT_VOTES=0.4
RANKING_WEIGHT_PAGERANK=0.3
RANKING_WEIGHT_RECENCY=0.2
RANKING_WEIGHT_TOPIC_MATCH=0.1
